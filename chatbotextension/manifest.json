{
  "manifest_version": 3,
  "name": "AI Classroom Assistant",
  "version": "1.0",
  "description": "An AI-powered real-time classroom assistant with voice input and chat capabilities.",
  "action": {
    "default_popup": "popup.html",
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "optional_permissions": [
      "audioCapture"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';"
    }
  }
}